<Structure>

    AnchorLayout:
        size: root.width, root.height
        anchor_y: "top"

        ScrollView:
            id: scroll
            size_hint: (1, root.text_input_top_height)
            scroll_type: ['bars']
            bar_width: 13

            Label:
                id: prompt
                text: ""
                padding: (3, 3)
                text_size: self.width, None
                markup: True
                font_name: root.text_font
                height: self.texture_size[1]
                size_hint: 1, None

    AnchorLayout:
        size: root.width, 29
        anchor_y: "bottom"

        TextInput:
            id: user_input
            focus: True
            background_color: "#1a1a1a"
            font_name: root.text_font
            foreground_color: "white"
            multiline: False
            on_text_validate: root.on_enter()
            disabled: root.disable